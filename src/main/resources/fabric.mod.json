  "authors": [
    "moehreag"
  ],
  "contact": {
    "sources": "https://github.com/moehreag/wayland-fixes"
  },
  "license": "LGPL-2.1",
  "icon": "assets/wayland_fixes/icon.png",
  "environment": "client",
  "entrypoints": {
    "main": [
      "io.github.moehreag.wayland_fixes.WaylandFixes"
    ]
  },
  "mixins": [
    "legacy-lwjgl3.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.12.0",
    "minecraft": ">=1.13"
  },
